{% extends 'base.html.twig' %}

{% block title %}Hello GerichtController!{% endblock %}

{% block body %}
<br>
<div class="container">
    <h2>Gerichte bearbeiten</h2>
    <br>
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Bestell Nr.</td>
                <td>Name</td>
                <td>Beschreibung</td>
            </tr>
        </thead>
        <tbody>
            {% for gericht in gerichte %}
            <tr>
                <td>{{gericht.id}}</td>
                <td>{{gericht.name}}</td>
                <td>{{gericht.Beschreibung}}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}